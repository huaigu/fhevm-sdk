{
  "name": "@fhevm/core",
  "version": "0.2.0",
  "description": "Framework-agnostic FHEVM SDK core library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js",
      "require": "./dist/storage/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "zama",
    "blockchain"
  ],
  "author": "Zama",
  "license": "BSD-3-Clause-Clear",
  "repository": {
    "type": "git",
    "url": "https://github.com/zama-ai/fhevm-sdk.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/zama-ai/fhevm-sdk#readme",
  "bugs": {
    "url": "https://github.com/zama-ai/fhevm-sdk/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "ethers": "^6.13.7",
    "@zama-fhe/relayer-sdk": "0.2.0"
  },
  "peerDependencies": {
    "@fhevm/mock-utils": "^0.1.0"
  },
  "peerDependenciesMeta": {
    "@fhevm/mock-utils": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9"
  }
}
